import json

# Load validation prompt
with open("../prompts/validation.prompt.txt", "r") as f:
    validation_prompt = f.read()

def validate_trip_output(extracted_json):
    """
    Sends extracted JSON + validation prompt to LLM for error correction
    (missing values, inconsistent formats, outliers, etc.)
    """
    response = client.chat.completions.create(
        model="gpt-4.1-mini",
        messages=[
            {"role": "system", "content": validation_prompt},
            {"role": "user", "content": extracted_json}
        ],
        response_format={"type": "json_object"}
    )

    return response.choices[0].message.content


print("‚è≥ Running validation‚Ä¶")
validated = validate_trip_output(extracted_json)

print("Final Validated Output ‚Üì")
print(validated)

# =========================================

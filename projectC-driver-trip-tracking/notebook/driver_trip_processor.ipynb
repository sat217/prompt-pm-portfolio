import json
import re
from pathlib import Path

# Paths
INPUT_FOLDER = Path("../samples/inputs")
PROMPT_FOLDER = Path("../prompts")
OUTPUT_FOLDER = Path("../samples/outputs")

OUTPUT_FOLDER.mkdir(exist_ok=True)

def load_text(file_path):
    with open(file_path, "r", encoding="utf-8") as f:
        return f.read()

# Load extraction prompt
extraction_prompt_path = PROMPT_FOLDER / "extraction.prompt.txt"

with open(extraction_prompt_path, "r", encoding="utf-8") as f:
    extraction_prompt = f.read()

print("Loaded extraction prompt:")
print(extraction_prompt[:300], "...")

# Pick any input file from /samples/inputs/
input_files = list(INPUT_FOLDER.glob("*.txt"))

if not input_files:
    raise FileNotFoundError("‚ùå No input files found in /samples/inputs/. Add at least one .txt file.")

input_file = input_files[0]  # use first one for now
raw_driver_notes = load_text(input_file)

print("Loaded input from:", input_file)
print(raw_driver_notes[:300], "...")

from openai import OpenAI
client = OpenAI()

def call_llm(prompt, user_input):
    response = client.chat.completions.create(
        model="gpt-4o-mini",
        messages=[
            {"role": "system", "content": prompt},
            {"role": "user", "content": user_input}
        ],
        temperature=0
    )
    return response.choices[0].message.content

raw_output = call_llm(extraction_prompt, raw_driver_notes)

print("LLM OUTPUT:")
print(raw_output)

def extract_json(text):
    try:
        return json.loads(text)
    except:
        # fallback ‚Äî try to find JSON in text
        match = re.search(r"{.*}", text, re.DOTALL)
        if match:
            try:
                return json.loads(match.group(0))
            except:
                return None
        return None

parsed = extract_json(raw_output)

print("Parsed JSON:")
print(parsed)

output_path = OUTPUT_FOLDER / "structured_driver_trip.json"

with open(output_path, "w", encoding="utf-8") as f:
    json.dump(parsed, f, indent=2)

print("Saved to:", output_path)


{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JiraTaskSchema",
  "type": "object",
  "properties": {
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Short, imperative task title"
          },
          "description": {
            "type": "string",
            "description": "Clear task explanation with context"
          },
          "acceptance_criteria": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Bullet-pointed, testable AC"
          },
          "estimate": {
            "type": "string",
            "enum": ["XS", "S", "M", "L", "XL", "unknown"],
            "description": "Effort estimate"
          },
          "assignee_role": {
            "type": "string",
            "description": "Role responsible, not a person"
          },
          "labels": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Relevant tags like backend, UI, infra, etc."
          }
        },
        "required": [
          "title",
          "description",
          "acceptance_criteria",
          "estimate",
          "assignee_role",
          "labels"
        ]
      }
    }
  },
  "required": ["tasks"]
}
